{
    "metrics": {
        "covered_lines" : {
            "name": "Test line coverage",
            "unit": "covered lines", "direction": ">=", "default_target": "0",
            "sources": ["jacoco", "sonarqube"]
        },
        "uncovered_lines": {
            "name": "Test line coverage",
            "unit": "uncovered lines", "direction": "<=", "default_target": "0",
            "sources": ["jacoco", "sonarqube"]
        },
        "covered_branches": {
            "name": "Test branch coverage",
            "unit": "covered branch", "direction": ">=", "default_target": "0",
            "sources": ["jacoco", "sonarqube"]
        },
        "uncovered_branches": {
            "name": "Test branch coverage",
            "unit": "uncovered branch", "direction": "<=", "default_target": "0",
            "sources": ["jacoco", "sonarqube"]
        },
        "jobs": {
            "name": "Number of CI-jobs",
            "unit": "CI-jobs", "direction": ">=", "default_target": "0",
            "sources": ["jenkins", "gitlab"]
        },
        "failed_jobs": {
            "name": "Number of failed CI-jobs",
            "unit": "CI-jobs", "direction": "<=", "default_target": "0",
            "sources": ["jenkins", "gitlab"]
        },
        "ncloc": {
            "name": "Size",
            "unit": "non-commented lines of code", "direction": "<=", "default_target": "50000",
            "sources": ["sonarqube"]
        },
        "loc": {
            "name": "Size",
            "unit": "lines of code", "direction": "<=", "default_target": "75000",
            "sources": ["sonarqube"]
        },
        "tests": {
            "name": "Number of tests",
            "unit": "tests", "direction": ">=", "default_target": "0",
            "sources": ["sonarqube", "junit"]
        },
        "failed_tests": {
            "name": "Number of failed tests",
            "unit": "failed tests", "direction": "<=", "default_target": "0",
            "sources": ["sonarqube", "junit"]
        },
        "version": {
            "name": "Version",
            "unit": "", "direction": ">=", "default_target": "0.0",
            "sources": ["sonarqube" , "jenkins", "gitlab"]
        },
        "violations": {
            "name": "Number of violations",
            "unit": "violations", "direction": "<=", "default_target": "0",
            "sources": ["sonarqube"]
        }
    },
    "sources": {
        "gitlab": {
            "name": "GitLab"
        },
        "jacoco": {
            "name": "JaCoCo"
        },
        "jenkins": {
            "name": "Jenkins"
        },
        "junit": {
            "name": "JUnit"
        },
        "sonarqube": {
            "name": "SonarQube"
        }
    }
}