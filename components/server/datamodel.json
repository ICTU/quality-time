{
    "metrics": {
        "covered_lines": {
            "name": "Test line coverage",
            "unit": "covered lines",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ]
        },
        "uncovered_lines": {
            "name": "Test line coverage",
            "unit": "uncovered lines",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ]
        },
        "covered_branches": {
            "name": "Test branch coverage",
            "unit": "covered branch",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ]
        },
        "uncovered_branches": {
            "name": "Test branch coverage",
            "unit": "uncovered branch",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ]
        },
        "jobs": {
            "name": "Number of CI-jobs",
            "unit": "CI-jobs",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jenkins",
                "gitlab",
                "random"
            ]
        },
        "failed_jobs": {
            "name": "Number of failed CI-jobs",
            "unit": "CI-jobs",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jenkins",
                "gitlab",
                "random"
            ]
        },
        "ncloc": {
            "name": "Size (non-commented LOC)",
            "unit": "non-commented lines of code",
            "direction": "<=",
            "default_target": "50000",
            "sources": [
                "sonarqube",
                "random"
            ]
        },
        "loc": {
            "name": "Size (LOC)",
            "unit": "lines of code",
            "direction": "<=",
            "default_target": "75000",
            "sources": [
                "sonarqube",
                "random"
            ]
        },
        "tests": {
            "name": "Number of tests",
            "unit": "tests",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "sonarqube",
                "junit",
                "random"
            ]
        },
        "failed_tests": {
            "name": "Number of failed tests",
            "unit": "failed tests",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "sonarqube",
                "junit",
                "random"
            ]
        },
        "violations": {
            "name": "Number of violations",
            "unit": "violations",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "sonarqube",
                "ojaudit",
                "random"
            ]
        }
    },
    "sources": {
        "gitlab": {
            "name": "GitLab",
            "parameters": {
                "url": {
                    "name": "URL",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                },
                "project": {
                    "name": "Project",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                },
                "private_token": {
                    "name": "Private Token",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                }
            },
            "units": {}
        },
        "jacoco": {
            "name": "JaCoCo",
            "parameters": {
                "url": {
                    "name": "URL",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches"
                    ]
                }
            },
            "units": {}
        },
        "jenkins": {
            "name": "Jenkins",
            "parameters": {
                "url": {
                    "name": "URL",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                }
            },
            "units": {
                "jobs": [
                    {
                        "name": "Job name",
                        "key": "name",
                        "url": "url"
                    }
                ],
                "failed_jobs": [
                    {
                        "name": "Job name",
                        "key": "name",
                        "url": "url"
                    }
                ]
            }
        },
        "junit": {
            "name": "JUnit",
            "parameters": {
                "url": {
                    "name": "URL",
                    "metrics": [
                        "tests",
                        "failed_tests"
                    ]
                }
            },
            "units": {}
        },
        "ojaudit": {
            "name": "OJAudit",
            "parameters": {
                "url": {
                    "name": "URL to XML report",
                    "metrics": [
                        "violations"
                    ]
                }
            },
            "units": {
                "violations": [
                    {
                        "name": "Message",
                        "key": "message"
                    },
                    {
                        "name": "Severity",
                        "key": "severity"
                    },
                    {
                        "name": "Component",
                        "key": "component"
                    }
                ]
            }
        },
        "random": {
            "name": "Random",
            "parameters": {},
            "units": {}
        },
        "sonarqube": {
            "name": "SonarQube",
            "parameters": {
                "url": {
                    "name": "URL",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches",
                        "ncloc",
                        "loc",
                        "tests",
                        "failed_tests",
                        "violations"
                    ]
                },
                "component": {
                    "name": "Project Key",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches",
                        "ncloc",
                        "loc",
                        "tests",
                        "failed_tests",
                        "violations"
                    ]
                }
            },
            "units": {
                "violations": [
                    {
                        "name": "Message",
                        "key": "message"
                    },
                    {
                        "name": "Component",
                        "key": "component",
                        "url": "url"
                    }
                ]
            }
        }
    }
}