{
    "metrics": {
        "uncovered_lines": {
            "name": "Test line coverage",
            "description": "Measure the number of lines of code not covered by tests. This is an indication of the quality of the test suite.",
            "unit": "uncovered lines",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ],
            "tags": ["test", "coverage"]
        },
        "uncovered_branches": {
            "name": "Test branch coverage",
            "description": "Measure the nuber of code branches not covered by tests. This is an indication of the quality of the test suite.",
            "unit": "uncovered branches",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ],
            "tags": ["test", "coverage"]
        },
        "failed_jobs": {
            "name": "Number of failed CI-jobs",
            "description": "Measure the number of continuous jobs that have failed. This metric is an indication of the quality of the CI-system.",
            "unit": "CI-jobs",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "hq",
                "jenkins",
                "gitlab",
                "random"
            ],
            "tags": ["ci"]
        },
        "unused_jobs": {
            "name": "Number of unused CI-jobs",
            "description": "Measure the number of continuous jobs that are unused. This metric is an indication of the quality of the CI-system.",
            "unit": "CI-jobs",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "hq",
                "jenkins",
                "random"
            ],
            "tags": ["ci"]
        },
        "issues": {
            "name": "Number of issues",
            "description": "Measure the number of issues.",
            "unit": "issues",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "hq",
                "jira",
                "random",
                "azure_devops",
                "random"
            ],
            "tags": []
        },
        "ncloc": {
            "name": "Size (non-commented LOC)",
            "description": "Measure the size of the software in lines of code, excluding comments.",
            "unit": "non-commented lines of code",
            "direction": "<=",
            "default_target": "50000",
            "sources": [
                "sonarqube",
                "random"
            ],
            "tags": ["size"]
        },
        "loc": {
            "name": "Size (LOC)",
            "description": "Measure the size of the software in lines of code.",
            "unit": "lines of code",
            "direction": "<=",
            "default_target": "75000",
            "sources": [
                "hq",
                "sonarqube",
                "random"
            ],
            "tags": ["size"]
        },
        "tests": {
            "name": "Number of tests",
            "description": "Measure the size of the test suite.",
            "unit": "tests",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jenkins_test_report",
                "junit",
                "random",
                "sonarqube"
            ],
            "tags": ["test"]
        },
        "failed_tests": {
            "name": "Number of failed tests",
            "description": "Measure the number of tests that fail.",
            "unit": "failed tests",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jenkins_test_report",
                "junit",
                "hq",
                "random",
                "sonarqube"
            ],
            "tags": ["test"]
        },
        "violations": {
            "name": "Number of violations",
            "description": "Measure how many violations of programming rules the software contains. This metric gives an indication of the quality of the source code.",
            "unit": "violations",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "hq",
                "ojaudit",
                "random",
                "sonarqube"
            ],
            "tags": ["violation"]
        }
    },
    "sources": {
        "gitlab": {
            "name": "GitLab",
            "description": "GitLab provides Git-repositories, wiki's, issue-tracking and continuous integration/continuous deployment pipelines.",
            "url": "https://gitlab.com/",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                },
                "project": {
                    "name": "Project",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                },
                "private_token": {
                    "name": "Private Token",
                    "type": "password",
                    "help_url": "https://docs.gitlab.com/ee/user/profile/personal_access_tokens.html",
                    "default_value": "",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                }
            },
            "units": {}
        },
        "hq": {
            "name": "HQ",
            "description": "Holistic Software Quality Reporting",
            "url": "https://github.com/ICTU/quality-report",
            "parameters": {
                "url": {
                    "name": "URL to HQ-report",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "failed_jobs",
                        "failed_tests",
                        "issues",
                        "ncloc",
                        "unused_jobs",
                        "violations"
                    ]
                },
                "metric_id": {
                    "name": "Stable metric ID",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "failed_jobs",
                        "failed_tests",
                        "issues",
                        "ncloc",
                        "unused_jobs",
                        "violations"
                    ]
                }
            },
            "units": {}
        },
        "jacoco": {
            "name": "JaCoCo",
            "description": "JaCoCo is an open-source tool for measuring and reporting Java code coverage.",
            "url": "https://www.eclemma.org/jacoco/",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches"
                    ]
                }
            },
            "units": {}
        },
        "jenkins": {
            "name": "Jenkins",
            "description": "Jenkins is an open source continuous integration/continuous deployment server.",
            "url": "https://jenkins.io/",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "jobs",
                        "failed_jobs",
                        "unused_jobs"
                    ]
                },
                "inactive_days": {
                    "name": "Number of days without builds after which to consider CI-jobs unused.",
                    "type": "integer",
                    "default_value": "90",
                    "metrics": [
                        "unused_jobs"
                    ]
                },
                "failure_type": {
                    "name": "Failure type",
                    "type": "multiple_choice",
                    "default_value": "",
                    "values": [
                        "Aborted",
                        "Failure",
                        "Not built",
                        "Unstable"
                    ],
                    "metrics": [
                        "failed_jobs"
                    ]
                }
            },
            "units": {
                "failed_jobs": [
                    {
                        "name": "Job name",
                        "key": "name",
                        "url": "url"
                    },
                    {
                        "name": "Status of most recent build",
                        "key": "build_status"
                    },
                    {
                        "name": "Date of most recent build",
                        "key": "build_datetime"
                    },
                    {
                        "name": "Age of most recent build (in days)",
                        "key": "build_age"
                    }
                ],
                "unused_jobs": [
                    {
                        "name": "Job name",
                        "key": "name",
                        "url": "url"
                    },
                    {
                        "name": "Status of most recent build",
                        "key": "build_status"
                    },
                    {
                        "name": "Date of most recent build",
                        "key": "build_datetime"
                    },
                    {
                        "name": "Age of most recent build (in days)",
                        "key": "build_age"
                    }
                ]
            }
        },
        "jenkins_test_report": {
            "name": "Jenkins test report",
            "description": "A Jenkins job with test results.",
            "url": "https://plugins.jenkins.io/junit",
            "parameters": {
                "url": {
                    "name": "URL to job",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "tests",
                        "failed_tests"
                    ]
                },
                "failure_type": {
                    "name": "Failure type",
                    "type": "multiple_choice",
                    "default_value": "",
                    "values": [
                        "failed",
                        "skipped"
                    ],
                    "metrics": [
                        "failed_tests"
                    ]
                }
            },
            "units": {
                "failed_tests": [
                    {
                        "name": "Class name",
                        "key": "class_name"
                    },
                    {
                        "name": "Test case",
                        "key": "name"
                    },
                    {
                        "name": "Failure type",
                        "key": "failure_type"
                    }
                ]
            }
        },
        "jira": {
            "name": "Jira",
            "description": "Jira is a proprietary issue tracker developed by Atlassian supporting bug tracking and agile project management.",
            "url": "https://www.atlassian.com/software/jira",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "issues"
                    ]
                },
                "jql": {
                    "name": "Issue query in JQL (Jira Query Language)",
                    "type": "string",
                    "help_url": "https://confluence.atlassian.com/jirasoftwarecloud/advanced-searching-764478330.html",
                    "default_value": "",
                    "metrics": [
                        "issues"
                    ]
                },
                "username": {
                    "name": "Username for basic authentication",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "issues"
                    ]
                },
                "password": {
                    "name": "Password for basic authentication",
                    "type": "password",
                    "default_value": "",
                    "metrics": [
                        "issues"
                    ]
                }
            },
            "units": {
                "issues": [
                    {
                        "name": "Summary",
                        "key": "summary",
                        "url": "url"
                    }
                ]
            }
        },
        "junit": {
            "name": "JUnit XML report",
            "description": "Test reports in the JUnit XML format.",
            "url": "https://junit.org",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "tests",
                        "failed_tests"
                    ]
                },
                "failure_type": {
                    "name": "Failure type",
                    "type": "multiple_choice",
                    "default_value": "",
                    "values": [
                        "errored",
                        "failed",
                        "skipped"
                    ],
                    "metrics": [
                        "failed_tests"
                    ]
                }
            },
            "units": {
                "failed_tests": [
                    {
                        "name": "Class name",
                        "key": "class_name"
                    },
                    {
                        "name": "Test case",
                        "key": "name"
                    },
                    {
                        "name": "Failure type",
                        "key": "failure_type"
                    }
                ]
            }
        },
        "ojaudit": {
            "name": "OJAudit",
            "description": "An Oracle JDeveloper program to audit Java code against JDeveloper's audit rules.",
            "url": "https://www.oracle.com/technetwork/developer-tools/jdev",
            "parameters": {
                "url": {
                    "name": "URL to XML report",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "violations"
                    ]
                },
                "severities": {
                    "name": "Severities",
                    "type": "multiple_choice",
                    "default_value": "",
                    "values": [
                        "advisory",
                        "incomplete",
                        "warning",
                        "error",
                        "exception"
                    ],
                    "metrics": [
                        "violations"
                    ]
                }
            },
            "units": {
                "violations": [
                    {
                        "name": "Message",
                        "key": "message"
                    },
                    {
                        "name": "Severity",
                        "key": "severity"
                    },
                    {
                        "name": "Component",
                        "key": "component"
                    }
                ]
            }
        },
        "random": {
            "name": "Random",
            "description": "A source that generates random numbers, for testing purposes.",
            "url": "https://en.wikipedia.org/wiki/Special:Random",
            "parameters": {},
            "units": {}
        },
        "sonarqube": {
            "name": "SonarQube",
            "description": "SonarQube is an open-source platform for continuous inspection of code quality to perform automatic reviews with static analysis of code to detect bugs, code smells, and security vulnerabilities on 20+ programming languages.",
            "url": "https://www.sonarqube.org",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches",
                        "ncloc",
                        "loc",
                        "tests",
                        "failed_tests",
                        "violations"
                    ]
                },
                "component": {
                    "name": "Project key",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches",
                        "ncloc",
                        "loc",
                        "tests",
                        "failed_tests",
                        "violations"
                    ]
                },
                "severities": {
                    "name": "Severities",
                    "type": "multiple_choice",
                    "help_url": "https://docs.sonarqube.org/latest/user-guide/issues/",
                    "default_value": "",
                    "values": [
                        "info",
                        "minor",
                        "major",
                        "critical",
                        "blocker"
                    ],
                    "metrics": [
                        "violations"
                    ]
                },
                "types": {
                    "name": "Types",
                    "type": "multiple_choice",
                    "help_url": "https://docs.sonarqube.org/latest/user-guide/rules/",
                    "default_value": "",
                    "values": [
                        "code_smell",
                        "bug",
                        "vulnerability",
                        "security_hotspot"
                    ],
                    "metrics": [
                        "violations"
                    ]
                }
            },
            "units": {
                "violations": [
                    {
                        "name": "Message",
                        "key": "message"
                    },
                    {
                        "name": "Severity",
                        "key": "severity"
                    },
                    {
                        "name": "Type",
                        "key": "type"
                    },
                    {
                        "name": "Component",
                        "key": "component",
                        "url": "url"
                    }
                ]
            }
        },
        "azure_devops": {
            "name": "Azure DevOps Server",
            "description": "Azure DevOps Server (formerly known as Team Foundation Server) by Microsoft provides source code management, reporting, requirements management, project management, automated builds, testing and release management.",
            "url": "https://azure.microsoft.com/en-us/services/devops/server/",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "default_value": "",
                    "metrics": [
                        "issues"
                    ]
                },
                "private_token": {
                    "name": "Private Token",
                    "type": "password",
                    "help_url": "https://docs.microsoft.com/en-us/azure/devops/organizations/accounts/use-personal-access-tokens-to-authenticate?view=azure-devops",
                    "default_value": "",
                    "metrics": [
                        "issues"
                    ]
                },
                "wiql": {
                    "name": "Issue query in WIQL (Work Item Query Language)",
                    "type": "string",
                    "help_url": "https://docs.microsoft.com/en-us/azure/devops/boards/queries/wiql-syntax?view=azure-devops",
                    "default_value": "",
                    "metrics": [
                        "issues"
                    ]
                }
            },
            "units": {
                "issues": [
                    {
                        "name": "Project",
                        "key": "project"
                    },
                    {
                        "name": "Title",
                        "key": "title",
                        "url": "url"
                    },
                    {
                        "name": "Work item type",
                        "key": "work_item_type"
                    },
                    {
                        "name": "State",
                        "key": "state"
