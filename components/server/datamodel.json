{
    "metrics": {
        "covered_lines": {
            "name": "Test line coverage",
            "description": "Measure the number of lines of code covered by tests. This is an indication of the quality of the test suite.",
            "unit": "covered lines",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ],
            "tag": ["test", "coverage"]
        },
        "uncovered_lines": {
            "name": "Test line coverage",
            "description": "Measure the number of lines of code not covered by tests. This is an indication of the quality of the test suite.",
            "unit": "uncovered lines",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ]
        },
        "covered_branches": {
            "name": "Test branch coverage",
            "description": "Measure the number of code branches covered by tests. THis is an indication of the quality of the test suite.",
            "unit": "covered branches",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ]
        },
        "uncovered_branches": {
            "name": "Test branch coverage",
            "description": "Measure the nuber of code branches not covered by tests. This is an indication of the quality of the test suite.",
            "unit": "uncovered branches",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jacoco",
                "sonarqube",
                "random"
            ]
        },
        "jobs": {
            "name": "Number of CI-jobs",
            "description": "Measure the number of continuous jobs. This metric is for testing Quality-time itself and will be removed eventually.",
            "unit": "CI-jobs",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jenkins",
                "gitlab",
                "random"
            ]
        },
        "failed_jobs": {
            "name": "Number of failed CI-jobs",
            "description": "Measure the number of continuous jobs that have failed. This metric is an indication of the quality of the CI-system.",
            "unit": "CI-jobs",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jenkins",
                "gitlab",
                "random"
            ]
        },
        "ncloc": {
            "name": "Size (non-commented LOC)",
            "description": "Measure the size of the software in lines of code, excluding comments.",
            "unit": "non-commented lines of code",
            "direction": "<=",
            "default_target": "50000",
            "sources": [
                "sonarqube",
                "random"
            ]
        },
        "loc": {
            "name": "Size (LOC)",
            "description": "Measure the size of the software in lines of code.",
            "unit": "lines of code",
            "direction": "<=",
            "default_target": "75000",
            "sources": [
                "sonarqube",
                "random"
            ]
        },
        "tests": {
            "name": "Number of tests",
            "description": "Measure the size of the test suite.",
            "unit": "tests",
            "direction": ">=",
            "default_target": "0",
            "sources": [
                "jenkins_test_report",
                "junit",
                "random",
                "sonarqube"
            ]
        },
        "failed_tests": {
            "name": "Number of failed tests",
            "description": "Measure the number of tests that fail.",
            "unit": "failed tests",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "jenkins_test_report",
                "junit",
                "random",
                "sonarqube"
            ]
        },
        "violations": {
            "name": "Number of violations",
            "description": "Measure how many violations of programming rules the software contains. This metric gives an indication of the quality of the source code.",
            "unit": "violations",
            "direction": "<=",
            "default_target": "0",
            "sources": [
                "hq",
                "ojaudit",
                "random",
                "sonarqube"
            ]
        }
    },
    "sources": {
        "gitlab": {
            "name": "GitLab",
            "description": "GitLab provides Git-repositories, wiki's, issue-tracking and CI/CD pipelines.",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                },
                "project": {
                    "name": "Project",
                    "type": "string",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                },
                "private_token": {
                    "name": "Private Token",
                    "type": "string",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                }
            },
            "units": {}
        },
        "hq": {
            "name": "HQ",
            "description": "Holistic Software Quality Reporting",
            "parameters": {
                "url": {
                    "name": "URL to metrics JSON",
                    "type": "string",
                    "metrics": [
                        "violations"
                    ]
                },
                "metric_id": {
                    "name": "Stable metric ID",
                    "type": "string",
                    "metrics": [
                        "violations"
                    ]
                }
            },
            "units": {}
        },
        "jacoco": {
            "name": "JaCoCo",
            "description": "JaCoCo is an open-source tool for measuring and reporting Java code coverage.",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches"
                    ]
                }
            },
            "units": {}
        },
        "jenkins": {
            "name": "Jenkins",
            "description": "Jenkins is an open source CI/CD server.",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "metrics": [
                        "jobs",
                        "failed_jobs"
                    ]
                }
            },
            "units": {
                "jobs": [
                    {
                        "name": "Job name",
                        "key": "name",
                        "url": "url"
                    }
                ],
                "failed_jobs": [
                    {
                        "name": "Job name",
                        "key": "name",
                        "url": "url"
                    }
                ]
            }
        },
        "jenkins_test_report": {
            "name": "Jenkins test report",
            "description": "A Jenkins job with test results.",
            "parameters": {
                "url": {
                    "name": "URL to job",
                    "type": "string",
                    "metrics": [
                        "tests",
                        "failed_tests"
                    ]
                }
            },
            "units": {
                "failed_tests": [
                    {
                        "name": "Class name",
                        "key": "class_name"
                    },
                    {
                        "name": "Test case",
                        "key": "name"
                    }
                ]
            }
        },
        "junit": {
            "name": "JUnit XML report",
            "description": "Test reports in the JUnit XML format.",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "metrics": [
                        "tests",
                        "failed_tests"
                    ]
                }
            },
            "units": {
                "failed_tests": [
                    {
                        "name": "Class name",
                        "key": "class_name"
                    },
                    {
                        "name": "Test case",
                        "key": "name"
                    }
                ]
            }
        },
        "ojaudit": {
            "name": "OJAudit",
            "description": "An Oracle JDeveloper program to audit Java code against JDeveloper's audit rules.",
            "parameters": {
                "url": {
                    "name": "URL to XML report",
                    "type": "string",
                    "metrics": [
                        "violations"
                    ]
                },
                "severities": {
                    "name": "Severities",
                    "type": "multiple_choice",
                    "values": [
                        "advisory",
                        "incomplete",
                        "warning",
                        "error",
                        "exception"
                    ],
                    "metrics": [
                        "violations"
                    ]
                }
            },
            "units": {
                "violations": [
                    {
                        "name": "Message",
                        "key": "message"
                    },
                    {
                        "name": "Severity",
                        "key": "severity"
                    },
                    {
                        "name": "Component",
                        "key": "component"
                    }
                ]
            }
        },
        "random": {
            "name": "Random",
            "description": "A source that generates random numbers, for testing purposes.",
            "parameters": {},
            "units": {}
        },
        "sonarqube": {
            "name": "SonarQube",
            "description": "SonarQube is an open-source platform for continuous inspection of code quality to perform automatic reviews with static analysis of code to detect bugs, code smells, and security vulnerabilities on 20+ programming languages.",
            "parameters": {
                "url": {
                    "name": "URL",
                    "type": "string",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches",
                        "ncloc",
                        "loc",
                        "tests",
                        "failed_tests",
                        "violations"
                    ]
                },
                "component": {
                    "name": "Project key",
                    "type": "string",
                    "metrics": [
                        "covered_lines",
                        "uncovered_lines",
                        "covered_branches",
                        "uncovered_branches",
                        "ncloc",
                        "loc",
                        "tests",
                        "failed_tests",
                        "violations"
                    ]
                },
                "severities": {
                    "name": "Severities",
